{
  "name": "DappStackUser",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "joinDate": {
      "type": "date",
      "required": true
    },
    "firstName": {
      "type": "string",
      "required": false
    },
    "lastName": {
      "type": "string",
      "required": false
    },
    "role": {
      "type": "string",
      "required": true,
      "default": "user"
    },
    "owner": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "profileImage": {
      "type": "string",
      "default": "/images/profile_placeholder.png"
    }
  },
  "validations": [],
  "relations": {
    "comments": {
      "type": "hasMany",
      "model": "Comments",
      "foreignKey": "dappStackUserId"
    },
    "favorites": {
      "type": "hasMany",
      "model": "Favorites",
      "foreignKey": "dappStackUserId"
    },
    "likes": {
      "type": "hasMany",
      "model": "Likes",
      "foreignKey": "dappStackUserId"
    },
    "roles": {
      "type": "hasMany",
      "model": "Role",
      "foreignKey": "principalId",
      "through": "RoleMapping"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
